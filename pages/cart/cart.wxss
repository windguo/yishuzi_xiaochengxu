.wraps{background:#eee;}

.content{font-weight:300;border-radius: 20rpx;background: #fff;margin:30rpx 50rpx;padding:50rpx;}
.content .listImg{width: 96%;border-bottom:1rpx solid #eee;padding-bottom:40rpx;margin-bottom:20rpx;}
.content h2{font-size:60rpx;padding-bottom:20rpx;}
.content h4{font-size: 40rpx;display: block;padding-bottom:20rpx;margin-bottom:20rpx;}
.content ul,.content li{display: block;font-size:36rpx;margin:10rpx 0;}
.intro{font-weight:300;border-radius: 20rpx;background: #fff;margin:30rpx 50rpx;padding:50rpx;}
.intro h2{display: block;padding:20rpx 0 10px 0rpx;}
.intro .newstext{padding:20rpx 60rpx;}


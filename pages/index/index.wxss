.tab-h{
    height: 100rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 100rpx;background: #eee; font-size: 36rpx;font-weight: 300; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99999;}
.tab-item{display: inline-block;margin:0px 10rpx;padding:0 30rpx;}
.tab-item.active{position: relative;background: #fff;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.tab-content{margin-top: 80rpx;}
.scoll-h{height: 100%;}
.previewImageStyle{overflow: hidden;}
.searchBox{
  line-height: 80rpx;
  padding:30rpx 10rpx 0 10rpx;
}
.buttonWrap{
  padding:30rpx 0 50rpx 0;
}
.sectionSlide{
  display: flex;
}
.sectionSlides{
  width: 450rpx;
  margin:0rpx 0rpx 0rpx 20rpx;
}
.formStyle{
  background: #fff;
  opacity: 0.9;
  padding:0px 40rpx;
  width: 540rpx;
  border-radius: 10rpx;
}
.selectTextColor,.selectBackgroundColor{
  display: flex;
}
.picker{
  font-size:30rpx;
}
.colorPicker{
  font-size: 32rpx;
}
.h3Style{
  font-size: 32rpx;
  text-align: right;
  color:#999;
  width: 160rpx;
  color: #666;
}
.searchBox .stext {
  border:1px solid #e68067;
  background:#fffff0;
  border-radius: 20rpx;
  padding:20rpx 40rpx;
  margin-bottom:10rpx;
  -webkit-box-shadow:8rpx 8rpx 8rpx #e2e2e2 inset;
}
.place-holder{
  color: #e68067
}
.sbutton{
  background:#ff5a00;
  color: #fff;
  font-size:36rpx;
  border-radius: 30rpx;
  padding:10rpx 0;
  font-weight: 300
}

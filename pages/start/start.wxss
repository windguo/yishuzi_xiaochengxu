.wrap{
	width: 100%;
	height:100%;
	display: flex;
  align-items: center;
  justify-content: center;
	background: #fff;
}
.countDownNum{
	position: absolute;
	top:50px;
	left:20px;
	z-index: 9999;
	display: flex;
	justify-content: center;
	align-items: center;
	background:rgba(0,0,0,0.1);
	padding:10rpx 30rpx;
	border-radius: 20rpx;
	color: #fff;
}
.countDownNum .num{
	margin-left:10rpx;
}
.first{
	background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%);
}
.two{
	background-image: linear-gradient(120deg, #e14fad 0%, #f9d423 100%);
}
.three{
	background-image: linear-gradient(120deg, #ff758c 0%, #ff7eb3 100%);
}
.four{
	background-image: linear-gradient(120deg, #ed6ea0 0%, #ec8c69 100%);
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 50rpx;
}
.swiper-box .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 20rpx;
    margin-left: 10rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.1);
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:rgba(255,255,255,0.9);   
}

.goHomeStyle{
	position: absolute;
	bottom:15%;
	left:35%;
	z-index: 999;
}

.anim {
    animation: jiggle 2s ease-in infinite;
}
@keyframes jiggle {
    48%, 62% {
        transform: scale(1.0, 1.0);
				color:#FF719A;
    }
    50% {
        transform: scale(1.1, 0.9);
    }
    56% {
        transform: scale(1.0, 1.1) translate(0, -5px)
    }
    59% {
        transform: scale(1.0, 1.0) translate(0, -3px)
    }
}